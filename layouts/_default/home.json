[{{ range $index, $page := where .Site.Pages "Type" "not in"  (slice "page" "json") }}
 {{ if ne .Section "tags"}}
 {{ if ne .Section "projektfilter"}}
 {{ if ne $page.Type "xml"}}
   {{ if ne $index 0 }},{{ end }}
     {
       "url": "{{ $page.Permalink }}",
       "title": {{ $page.Title | jsonify}},
       "section": "{{ .Section }}",
       "date": "{{ $page.Date }}",
       {{ if and (isset $page.Params "img") (eq .Section "projekte") }}
       "img": "{{ $page.Params.img }}",
       {{ end }}
       "content": {{ $page.PlainWords | jsonify }}
     }
 {{ end }}
 {{ end }}
 {{ end }}
 {{ end }}]
